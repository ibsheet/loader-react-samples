{
  "compilerOptions": {
    "target": "es5",
    "module": "es6",
    "moduleResolution": "node",
    "noResolve": false,
    "noImplicitAny": false,
    "removeComments": false,
    "sourceMap": true,
    "allowJs": true,
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "keyofStringsOnly": true,
    "lib": ["es6", "dom"],
    "noImplicitThis": true,
    "strictNullChecks": true
  },
  "typeRoots": ["node_modules/@types", "src/@types"],
  "exclude": [
    "node_modules",
    "scripts",
    "webpack",
    "./node_modules/**/*"
  ],
  "include": ["./src/**/*", "@type"]
}
